<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Northwind</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="/Home/Index">Northwind</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Customer/CustomerIndex">Müşteriler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Category/CategoryIndex">Kategoriler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Product/ProductIndex">Ürünler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Order/OrderIndex">Siparişler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Login/LoginIndex">Login</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />
    </div>

    <footer class="py-2 text-white bg-dark fixed-bottom">
        <p class="text-center">&copy; @DateTime.Now.Year - Northwind</p>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>